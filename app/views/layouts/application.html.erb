<!DOCTYPE html>
<html>
<head>
  <title>Jungle</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <%= render 'layouts/top_nav' %>

  <% if current_user %>
    <div class="login-logout">
    Signed in as <%= current_user.name %> | <%= link_to "Logout", '/sessions', method: :delete %>
    </div>
  <% else %>
    <div class="login-logout">
    <%= link_to 'Login', new_sessions_path %> | <%= link_to 'Signup', new_user_path %>
    </div>
  <% end %>

  <main class="container">
    <%= yield %>
  </main>

  <%= yield :end_of_body %>
</body>
</html>
